{
    "name": "vepay/cauri",
    "type": "library",
    "description": "PHP library gateway for payment system Cauri",
    "license": "MIT",
    "homepage": "https://cauri.com/",
    "authors": [
        {"name": "Dzmitry Kuzmin", "email": "d4.kuzmin@itransition.com"},
        {"name": "Yauhen Kuzob", "email": "e.kuzob@itransition.com"}
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://git.vepay.cf/backend/commongateway.git"
        }
    ],
    "require": {
        "php": "^7.4",
        "vepay/commongateway": "dev-develop"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Vepay\\Cauri\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vepay\\Cauri\\Tests\\": "tests/",
            "Vepay\\Gateway\\Tests\\": "vendor/vepay/commongateway/tests/"
        }
    }
}
